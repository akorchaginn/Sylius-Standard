{% extends '@SyliusShop/layout.html.twig' %}
{% import '@SyliusUi/Macro/messages.html.twig' as messages %}


{% block content %}
    {% include 'news/helper/_breadcrumb.html.twig' %}
<div class="col-xs-12">
<h1 class="news-title ui monster section dividing header">{{ 'app.ui.uncost'|trans }}</h1>

    {% if news|length > 0 %}
    {% for new in news %}
        <div class="news">
            <span class="text-muted">{{ new.createdAt|date("Y.m.d") }}</span> - <b>{{ new.header }}</b>
            <p>{{ new.shortText }}</p>
        </div>
    {% endfor %}
    {% else %}    
    {{ messages.info('sylius.ui.no_results_to_display') }}
    {% endif %} 
</div>
{% endblock %}
