{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

<h1 class="ui header">
    <i class="circular cart icon"></i>
    <div class="content">
        {{ 'sylius.ui.summary_of_your_order'|trans }} #{{ order.number }}
        <div class="sub header">
            <div class="ui horizontal divided list">
                <div class="item">
                    {{ order.checkoutCompletedAt|date }}
                </div>
                <div class="item">
                    {{ money.convertAndFormat(order.total) }}
                </div>
                <div class="item">
                    {{ order.items|length }} {{ 'sylius.ui.items'|trans|lower }}
                </div>
            </div>
        </div>
    </div>
</h1>
<div class="ui segment">
    {% include '@SyliusShop/Order/Summary/_totals.html.twig' %}
    <p class="text-right"><strong>{{ 'sylius.ui.subtotal'|trans }}</strong>: {{ money.format(order.itemsTotal ,order.currencyCode) }}</p>
</div>
