    <input type="hidden" name="_method" value="PUT"/>
    <div class="order__container">
        <h5 class="filter__title">{{ 'sylius.ui.your_order'|trans }} № 27112</h5>
    </div>
    <div class="order__box">
        <p class="">{{ 'sylius.ui.item'|trans }}</p>
