        <p class="">{{ 'sylius.ui.unit_price'|trans }}</p>
    </div>
    {% import "@SyliusShop/Common/Macro/money.html.twig" as money %}
    <div class="order__box-product">
        {% include '@SyliusShop/Common/Order/Table/_items.html.twig' %}
    </div>
    {% import "@SyliusShop/Common/Macro/money.html.twig" as money %}
    {{ sonata_block_render_event('sylius.shop.checkout.complete.before_summary', {'order': order, 'form': form}) }}
    <p class="order__box-item" id="total">
        <span class="order__box-item_accent">{{ 'sylius.ui.total'|trans }}: {{ money.format(order.total, order.currencyCode) }}</span>
    </p>

    {#            {% include 'SyliusShopBundle:Common/Order:_summary.html.twig' %}#}

    {{ sonata_block_render_event('sylius.shop.checkout.complete.after_summary', {'order': order}) }}
    <div id="sylius-shipping-address">
        <h3 class="order__name">Федорова Наталья Владимировна</h3>
        <p class="order__address">Барнаул, ул. Антона Петрова 218 а, кв 150, 387387</p>
        {#                {% include '@SyliusShop/Common/_address.html.twig' with {'address': order.shippingAddress} %}#}
    </div>
    {% include '@SyliusShop/Common/Order/_shipments.html.twig' %}
    {% include '@SyliusShop/Common/Order/_payments.html.twig' %}
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}

