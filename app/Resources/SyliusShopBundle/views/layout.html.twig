<script src="https://cdnjs.cloudflare.com/ajax/libs/SlickNav/1.0.10/jquery.slicknav.min.js"></script>
<script>
    $(function () {
        $('#menu').slicknav({
            appendTo: '#mobile-menu',
            label: 'Меню',
            init: function () {
                var menu = $('#mobile-menu');

                $(menu).find('.ui.dropdown.item').click(function (evt) {
                    evt.stopPropagation();

                    var currentTarget = evt.currentTarget;
                    var dropdown = $(currentTarget).find('> .menu');

                    if (dropdown.length) {
                        $(dropdown).slideToggle();
                    }
                });
            }
        });

        $('.menu-catalog__title').on('click', function (evt) {
            var text = $(evt.currentTarget).text();

            console.log(text);

            $(evt.currentTarget).text(
                text == "Открыть каталог" ? "Закрыть каталог" : "Открыть каталог");

            $('.catalog-menu__wrap').toggleClass('menu-catalog-hide');

            return false;
        });
    });
