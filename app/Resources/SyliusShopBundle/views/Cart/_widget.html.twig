{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

<ul class="header__info header__info-basket" id="sylius-cart-button">
    {{ sonata_block_render_event('sylius.shop.partial.cart.summary.before_widget_content', {'cart': cart}) }}
    <li class="header__info_shoppingBasket">
        <img class="header__info_basket" src="/assets/shop/img/shopping-basket.svg">
        {% if cart.empty %}
    <li class="header__cart">
        <a href="{{ path('sylius_shop_homepage') }}cart" class="header__link"> {{ 'sylius.ui.cart'|trans }}</a>
    </li>
{% else %}
    <li>
        <a href="{{ path('sylius_shop_cart_summary') }}" class="header__link"> {{ 'sylius.ui.cart'|trans }}</a>
        <p class="header__info-total">
            {{ money.convertAndFormat(cart.itemsTotal) }}</p>
        <a class="header__info-active">{{ cart.items|length }}</a>
    </li>
    {% endif %}
    {{ sonata_block_render_event('sylius.shop.partial.cart.summary.after_widget_content', {'cart': cart}) }}
    </li>
</ul>

