                    <button type="button" class="filter__button">Фильтр товаров</button>
                    {% include '@SyliusShop/Product/Show/_selectedHead.html.twig' %}
              {% include '@SyliusShop/Product/Index/_main.html.twig' %}
                </div>
         </div>
     </section>
    <section class="new promotional section">
        {% include '@SyliusShop/Product/Show/_promotionalProducts.html.twig' %}
    </section>
{% endblock %}
