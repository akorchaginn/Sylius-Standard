{% extends '@SyliusShop/layout.html.twig' %}

{% block title %}{{ product.name }} - {{ 'sylius.ui.shop_name'|trans }}{% endblock %}
{% block metatags %}
<meta name="Description" content="{{ product.translation.metadescription }}">
    <meta name="Keywords" content="{{ product.translation.metakeywords}}">
{% endblock %}


{% block content %}
    {{ parent() }}
    <section class="new catalog catalog__card section">
    {% include 'news/helper/_breadcrumb.html.twig' %}
        <div class="catalog__flex">
            {% include '@SyliusShop/Product/_verticalMenu.html.twig' %}
        <div class="card">
            <button type="button" class="filter__button">Фильтр товаров</button>
            <div class="card__container">
                <figure class="card__image">
                    {% include '@SyliusShop/Product/Show/_images.html.twig' %}
                    {{ sonata_block_render_event('sylius.shop.product.show.after_images', {'product': product}) }}
                </figure>
                <div class="card__description">
                    <ul class="card__price">
                        <li class="card__price-list">Цена:
                    {% if not product.variants.empty() %}
                        {% include '@SyliusShop/Product/Show/_price.html.twig' %}
                    {% endif %}
                            <p class="yarn__price yarn__price_card">&#8381;</p>
                            {{ sonata_block_render_event('sylius.shop.product.show.after_price', {'product': product}) }}
                        </li>
                        {% include '@SyliusShop/Product/Show/Tabs/_attributes.html.twig' %}
                    </ul>
                </div>
            </div>
            <h2 class="color__title">Цвет пряжи</h2>
                {% include '@SyliusShop/Product/Show/_inventory.html.twig' with {'place': 'default'}   %}
        </div>
            {{ sonata_block_render_event('sylius.shop.product.show.after_description', {'product': product}) }}
            {
        </div>
    </section>
    {% include '@SyliusShop/Product/Show/_promotionalProducts.html.twig' %}
{% endblock %}



