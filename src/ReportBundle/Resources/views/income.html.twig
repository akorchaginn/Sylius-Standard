{% extends 'SyliusAdminBundle::layout.html.twig' %}

{% block title %}{{ 'sylius.ui.shop_name'|trans }} | {{ 'sylius.report.income'|trans }}{% endblock %}

{% block content %}
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
    <div class="ui three column stackable grid segment">
        <div class="column">
            {{ form_row(form.date_from) }}
        </div>
        <div class="column">
            {{ form_row(form.date_to) }}
        </div>
        <div class="column">
            {{ form_row(form.submit) }}
        </div>
    </div>
        {{ form_end(form) }}
    <div class="ui segment">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">{{ 'sylius.ui.number'|trans }}</th>
                <th scope="col">{{ 'sylius.ui.item'|trans }}</th>
                <th scope="col">{{ 'sylius.ui.variant'|trans }}</th>
                <th scope="col">{{ 'sylius.ui.quantity'|trans }}</th>
                <th scope="col">{{ 'sylius.ui.unit_price'|trans }}</th>
                <th scope="col">{{ 'sylius.ui.total'|trans }}</th>
                <th scope="col">{{ 'sylius.ui.creation_time'|trans }}</th>
            </tr>
            </thead>
            <tbody>
        {% for key, product in data %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ product['product'] }}</td>
                <td>{{ product['variant'] }}</td>
                <td>{{ product['quantity'] }}</td>
                <td>{{ product['price'] }}</td>
                <td>{{ product['total'] }}</td>
                <td>{{ product['order_date'] }}</td>
            </tr>
        {% else %}
            <tr><td>{{ 'sylius.report.no_data'|trans }}</td></tr>
        {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}